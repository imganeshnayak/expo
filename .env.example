# Environment Variables Template
# Copy to .env.local for development or .env.production for production

# ==================== API CONFIGURATION ====================
API_BASE_URL=https://api.uma.app
API_TIMEOUT=30000
API_MAX_RETRIES=3

# ==================== AUTHENTICATION ====================
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRY=86400
REFRESH_TOKEN_EXPIRY=604800

# ==================== EXTERNAL SERVICES ====================

# Sentry (Crash Reporting)
SENTRY_DSN=https://your_sentry_dsn_here
SENTRY_ENVIRONMENT=production
SENTRY_SAMPLE_RATE=1.0

# PostHog (Analytics)
POSTHOG_API_KEY=your_posthog_key_here
POSTHOG_HOST=https://app.posthog.com

# Mixpanel (Analytics - Alternative)
MIXPANEL_TOKEN=your_mixpanel_token_here

# ==================== PAYMENT GATEWAYS ====================

# Stripe
STRIPE_PUBLIC_KEY=pk_live_...
STRIPE_SECRET_KEY=sk_live_...

# Razorpay
RAZORPAY_KEY_ID=rzp_live_...
RAZORPAY_KEY_SECRET=...

# PayPal
PAYPAL_CLIENT_ID=...
PAYPAL_SECRET=...

# ==================== ONDC INTEGRATION ====================
ONDC_GATEWAY_URL=https://pilot-gateway-1.beckn.nsdl.co.in
ONDC_SUBSCRIBER_ID=uma.app
ONDC_SUBSCRIBER_URI=https://uma.app/ondc
ONDC_SIGNING_PRIVATE_KEY=...
ONDC_ENCRYPTION_PRIVATE_KEY=...

# ==================== SMS & EMAIL ====================

# Twilio (SMS)
TWILIO_ACCOUNT_SID=...
TWILIO_AUTH_TOKEN=...
TWILIO_PHONE_NUMBER=+1...

# SendGrid (Email)
SENDGRID_API_KEY=...
SENDGRID_FROM_EMAIL=noreply@uma.app

# Firebase Cloud Messaging (Push Notifications)
FCM_SERVER_KEY=...
FCM_SENDER_ID=...

# ==================== MAPS & LOCATION ====================
GOOGLE_MAPS_API_KEY=...
MAPBOX_ACCESS_TOKEN=...

# ==================== STORAGE ====================

# AWS S3
AWS_ACCESS_KEY_ID=...
AWS_SECRET_ACCESS_KEY=...
AWS_S3_BUCKET=uma-production
AWS_REGION=ap-south-1

# Cloudinary (Alternative)
CLOUDINARY_CLOUD_NAME=...
CLOUDINARY_API_KEY=...
CLOUDINARY_API_SECRET=...

# ==================== DATABASE ====================
DATABASE_URL=postgresql://...
REDIS_URL=redis://...

# ==================== SECURITY ====================
ENCRYPTION_KEY=...
API_SECRET_KEY=...
WEBHOOK_SECRET=...

# ==================== FEATURE FLAGS ====================
ENABLE_AUTO_APPLY_COUPONS=true
ENABLE_AI_RECOMMENDATIONS=true
ENABLE_SOCIAL_FEATURES=true
ENABLE_B2B_MARKETPLACE=true
ENABLE_WHITE_LABEL=true

# ==================== RATE LIMITING ====================
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# ==================== CDN ====================
CDN_URL=https://cdn.uma.app
ASSET_PREFIX=/static

# ==================== MONITORING ====================
NEW_RELIC_LICENSE_KEY=...
DATADOG_API_KEY=...

# ==================== APP STORES ====================
IOS_APP_ID=...
ANDROID_PACKAGE_NAME=com.uma.app
APP_STORE_URL=https://apps.apple.com/app/...
PLAY_STORE_URL=https://play.google.com/store/apps/...

# ==================== THIRD-PARTY INTEGRATIONS ====================

# Social Login
GOOGLE_CLIENT_ID=...
FACEBOOK_APP_ID=...
APPLE_CLIENT_ID=...

# Ride Sharing
UBER_CLIENT_ID=...
UBER_CLIENT_SECRET=...
OLA_API_KEY=...

# Food Delivery
SWIGGY_API_KEY=...
ZOMATO_API_KEY=...

# ==================== DEPLOYMENT ====================
DEPLOYMENT_ENVIRONMENT=production
BUILD_NUMBER=1
VERSION_NUMBER=1.0.0
EXPO_PROJECT_ID=...

# ==================== LOGGING ====================
LOG_LEVEL=error
ENABLE_DEBUG_LOGS=false
LOG_RETENTION_DAYS=30
