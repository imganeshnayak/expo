PORT=5000
NODE_ENV=development
MONGO_URI=mongodb://localhost:27017/utopia

# Authentication (REQUIRED - Generate a secure random string min 32 chars)
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters
JWT_EXPIRE=30d

# Cloudinary (for image uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# CORS - Allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:8081,exp://192.168.1.3:8081

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_GENERAL=1000
RATE_LIMIT_MAX_AUTH=20

# Expo Push Notifications
EXPO_ACCESS_TOKEN=your_expo_access_token

# ONDC (if applicable)
ONDC_BAP_ID=your_bap_id
ONDC_BAP_URI=your_bap_uri
ONDC_PUBLIC_KEY=your_public_key
ONDC_PRIVATE_KEY=your_private_key

